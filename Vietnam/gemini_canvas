// Main App Component
const App = () => {
  const [language, setLanguage] = useState('en'); // 'en' for English, 'hi' for Hindi

  // Expandable Content Component
  const ExpandableContent = ({ activity, currentLanguage }) => {
    const [isOpen, setIsOpen] = useState(false);
    const titleText = currentLanguage === 'hi' ? activity.text_hi || activity.text : activity.text;
    const descriptionText = currentLanguage === 'hi' ? activity.description_hi || activity.description : activity.description;

    return (
      <div className="mb-2">
        <button
          onClick={() => setIsOpen(!isOpen)}
          className="w-full text-left p-2 rounded-md bg-gray-100 hover:bg-gray-200 focus:outline-none focus:ring-2 focus:ring-blue-500 flex justify-between items-center"
        >
          <span className="font-medium text-gray-800">{titleText}</span>
          <svg
            className={`w-5 h-5 transition-transform duration-300 ${isOpen ? 'rotate-180' : ''}`}
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path strokeLinecap="round" strokeLinejoin="round" strokeWidth="2" d="M19 9l-7 7-7-7"></path>
          </svg>
        </button>
        {isOpen && (
          <div className="mt-2 p-3 bg-gray-50 rounded-md text-sm text-gray-700 border border-gray-100">
            {descriptionText}
          </div>
        )}
      </div>
    );
  };

  // Component to embed Google Maps and Image Carousel
  const MapEmbed = ({ locationName, query, type, currentLanguage, description_hi, description_en, highlights_en, highlights_hi, images }) => {
    const mapUrl = `https://maps.google.com/maps?q=${encodeURIComponent(query)}&output=embed`;
    const titlePrefix = translations[currentLanguage][`${type}Label`];
    const descriptionText = currentLanguage === 'hi' ? description_hi || description_en : description_en;
    const highlights = currentLanguage === 'hi' ? highlights_hi || highlights_en : highlights_en;

    const [currentImageIndex, setCurrentImageIndex] = useState(0);

    const nextImage = () => {
      setCurrentImageIndex((prevIndex) => (prevIndex + 1) % images.length);
    };

    const prevImage = () => {
      setCurrentImageIndex((prevIndex) => (prevIndex - 1 + images.length) % images.length);
    };

    const currentImage = images && images.length > 0 ? images[currentImageIndex] : null;

    return (
      <div className="w-full h-auto rounded-lg overflow-hidden shadow-lg mb-4 flex flex-col">
        <h4 className="text-lg font-semibold text-gray-800 p-2 bg-gray-100 rounded-t-lg">{titlePrefix}: {locationName}</h4>

        {/* Image Carousel */}
        {images && images.length > 0 && (
          <div className="relative w-full h-48 sm:h-64 bg-gray-200 flex items-center justify-center overflow-hidden">
            <img
              src={currentLanguage === 'hi' ? currentImage.src_hi : currentImage.src_en}
              alt={currentLanguage === 'hi' ? currentImage.alt_hi : currentImage.alt_en}
              className="w-full h-full object-cover transition-opacity duration-300 ease-in-out"
            />
            {images.length > 1 && (
              <>
                <button
                  onClick={prevImage}
                  className="absolute left-2 top-1/2 -translate-y-1/2 bg-black bg-opacity-50 text-white p-2 rounded-full focus:outline-none hover:bg-opacity-75 transition-colors"
                  aria-label={translations[currentLanguage].prevImage}
                >
                  &#10094;
                </button>
                <button
                  onClick={nextImage}
                  className="absolute right-2 top-1/2 -translate-y-1/2 bg-black bg-opacity-50 text-white p-2 rounded-full focus:outline-none hover:bg-opacity-75 transition-colors"
                  aria-label={translations[currentLanguage].nextImage}
                >
                  &#10095;
                </button>
              </>
            )}
            <div className="absolute bottom-2 left-0 right-0 flex justify-center space-x-2">
              {images.map((_, idx) => (
                <span
                  key={idx}
                  className={`block w-2 h-2 rounded-full ${currentImageIndex === idx ? 'bg-white' : 'bg-gray-400'}`}
                ></span>
              ))}
            </div>
          </div>
        )}

        <iframe
          title={`${titlePrefix}: ${locationName}`}
          src={mapUrl}
          width="100%"
          height="200px"
          style={{ border: 0 }}
          allowFullScreen=""
          loading="lazy"
          referrerPolicy="no-referrer-when-downgrade"
          className="flex-grow mt-4" // Added margin top for spacing after image carousel
        ></iframe>
        <a
          href={`https://www.google.com/maps/search/?api=1&query=${encodeURIComponent(query)}`}
          target="_blank"
          rel="noopener noreferrer"
          className="block w-full text-center bg-blue-600 text-white py-2 rounded-b-lg hover:bg-blue-700 transition-colors duration-200 text-sm"
        >
          {translations[currentLanguage].viewOnGoogleMaps}
        </a>
        {descriptionText && (
          <div className="mt-2 p-3 bg-gray-50 rounded-md text-sm text-gray-700 border border-gray-100">
            {descriptionText}
          </div>
        )}
        {highlights && highlights.length > 0 && (
          <div className="mt-2 p-3 bg-blue-50 rounded-md text-sm text-gray-800 border border-blue-100">
            <h5 className="font-semibold mb-1 text-blue-700">{translations[currentLanguage].highlightsLabel}</h5>
            <ul className="list-disc list-inside space-y-1">
              {highlights.map((item, idx) => (
                <li key={idx}>{item}</li>
              ))}
            </ul>
          </div>
        )}
      </div>
    );
  };

  // Suggestions Modal Component
  const SuggestionsModal = ({ isOpen, onClose, suggestions, isLoading, error, currentLanguage }) => {
    if (!isOpen) return null;

    return (
      <div className="fixed inset-0 bg-gray-600 bg-opacity-75 flex items-center justify-center p-4 z-50">
        <div className="bg-white rounded-lg shadow-xl max-w-lg w-full p-6">
          <div className="flex justify-between items-center mb-4">
            <h3 className="text-2xl font-bold text-blue-800">{translations[currentLanguage].modalTitle}</h3>
            <button onClick={onClose} className="text-gray-500 hover:text-gray-700 text-3xl leading-none">&times;</button>
          </div>
          {isLoading && (
            <div className="text-center text-gray-600">{translations[currentLanguage].fetchingSuggestions}</div>
          )}
          {error && (
            <div className="text-red-600 text-center">{translations[currentLanguage].errorLabel} {error}</div>
          )}
          {suggestions && suggestions.length > 0 && !isLoading && (
            <div className="space-y-4">
              {suggestions.map((item, index) => (
                <div key={index} className="border-b pb-2 last:border-b-0">
                  <p className="font-semibold text-lg text-gray-900">
                    {currentLanguage === 'hi' ? item.name_hi || item.name_en : item.name_en}
                  </p>
                  <p className="text-gray-700 text-sm">
                    {currentLanguage === 'hi' ? item.description_hi || item.description_en : item.description_en}
                  </p>
                  <p className="text-gray-600 text-xs italic">
                    {translations[currentLanguage].signatureDish} {currentLanguage === 'hi' ? item.signatureDish_hi || item.signatureDish_en : item.signatureDish_en}
                  </p>
                </div>
              ))}
            </div>
          )}
          {suggestions && suggestions.length === 0 && !isLoading && !error && (
            <div className="text-gray-600 text-center">{translations[currentLanguage].noSuggestionsFound}</div>
          )}
        </div>
      </div>
    );
  };


  // Itinerary Day Component
  const ItineraryDay = ({ dayData, currentLanguage }) => {
    const [showSuggestionsModal, setShowSuggestionsModal] = useState(false);
    const [suggestions, setSuggestions] = useState([]);
    const [isLoadingSuggestions, setIsLoadingSuggestions] = useState(false);
    const [errorSuggestions, setErrorSuggestions] = useState(null);

    const fetchRestaurantSuggestions = async (location) => {
      setIsLoadingSuggestions(true);
      setErrorSuggestions(null);
      setSuggestions([]); // Clear previous suggestions

      try {
        const prompt = `Suggest 3 popular local restaurants in ${location} with a short description and signature dishes. Provide the response as a JSON array of objects, each with 'name_en', 'name_hi', 'description_en', 'description_hi', 'signatureDish_en', 'signatureDish_hi' properties.`;
        let chatHistory = [];
        chatHistory.push({ role: "user", parts: [{ text: prompt }] });

        const payload = {
          contents: chatHistory,
          generationConfig: {
            responseMimeType: "application/json",
            responseSchema: {
              type: "ARRAY",
              items: {
                type: "OBJECT",
                properties: {
                  "name_en": { "type": "STRING" },
                  "name_hi": { "type": "STRING" },
                  "description_en": { "type": "STRING" },
                  "description_hi": { "type": "STRING" },
                  "signatureDish_en": { "type": "STRING" },
                  "signatureDish_hi": { "type": "STRING" }
                },
                "propertyOrdering": ["name_en", "name_hi", "description_en", "description_hi", "signatureDish_en", "signatureDish_hi"]
              }
            }
          }
        };

        const apiKey = ""; // Canvas will automatically provide it in runtime
        const apiUrl = `https://generativelanguage.googleapis.com/v1beta/models/gemini-2.0-flash:generateContent?key=${apiKey}`;

        const response = await fetch(apiUrl, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(payload)
        });

        if (!response.ok) {
          const errorData = await response.json();
          throw new Error(errorData.error?.message || 'Failed to fetch suggestions');
        }

        const result = await response.json();

        if (result.candidates && result.candidates.length > 0 &&
            result.candidates[0].content && result.candidates[0].content.parts &&
            result.candidates[0].content.parts.length > 0) {
          const json = result.candidates[0].content.parts[0].text;
          const parsedJson = JSON.parse(json);
          setSuggestions(parsedJson);
        } else {
          setSuggestions([]);
          setErrorSuggestions('No valid suggestions found in the response.');
        }
      } catch (error) {
        console.error("Error fetching restaurant suggestions:", error);
        setErrorSuggestions(error.message || 'An unexpected error occurred.');
      } finally {
        setIsLoadingSuggestions(false);
        setShowSuggestionsModal(true); // Open modal after fetching
      }
    };


    return (
      <div className="bg-white rounded-xl shadow-lg p-6 mb-8 border border-gray-200">
        <h2 className="text-3xl font-extrabold text-blue-800 mb-4 flex items-center">
          Day {dayData.day}: {dayData.date} - {dayData.location}
        </h2>
        <p className="text-lg text-gray-700 mb-4">
          <span className="font-semibold">{translations[currentLanguage].accommodationLabel}</span> {dayData.accommodation}
        </p>

        {/* Button for Restaurant Suggestions */}
        {dayData.location !== 'Una to New Delhi / In Flight' && dayData.location !== 'Da Nang to India' && dayData.location !== 'India' && ( // Only show for relevant travel days
          <button
            onClick={() => fetchRestaurantSuggestions(dayData.location.split('/')[0].trim())}
            className="mb-6 px-6 py-3 bg-indigo-600 text-white font-bold rounded-full shadow-md hover:bg-indigo-700 transition-colors duration-300 flex items-center justify-center"
            disabled={isLoadingSuggestions}
          >
            {isLoadingSuggestions ? (
              <>
                <svg className="animate-spin -ml-1 mr-3 h-5 w-5 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                  <circle className="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" strokeWidth="4"></circle>
                  <path className="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                </svg>
                {translations[currentLanguage].fetchingSuggestions}
              </>
            ) : (
              translations[currentLanguage].restaurantSuggestionsButton
            )}
          </button>
        )}

        {/* Key Locations Maps */}
        {dayData.keyLocations && dayData.keyLocations.length > 0 && (
          <div className="mb-6">
            <h3 className="text-2xl font-bold text-gray-800 mb-4">{translations[currentLanguage].keyLocationsLabel}</h3>
            <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
              {dayData.keyLocations.map((loc, index) => (
                <MapEmbed
                  key={index}
                  locationName={loc.name}
                  query={loc.query}
                  type={loc.type}
                  currentLanguage={currentLanguage}
                  description_en={loc.description} // Pass English description
                  description_hi={loc.description_hi} // Pass Hindi description
                  highlights_en={loc.highlights_en} // Pass English highlights
                  highlights_hi={loc.highlights_hi} // Pass Hindi highlights
                  images={loc.images} // Pass images array
                />
              ))}
            </div>
          </div>
        )}

        <div className="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6">
          {/* Morning Activities */}
          <div className="bg-blue-50 p-4 rounded-lg shadow-sm">
            <h3 className="text-xl font-bold text-blue-700 mb-3">{translations[currentLanguage].morningLabel}</h3>
            <ul className="list-none text-gray-800 space-y-1">
              {dayData.morning.map((activity, index) => (
                <li key={index}>
                  <ExpandableContent activity={activity} currentLanguage={currentLanguage} />
                </li>
              ))}
            </ul>
          </div>

          {/* Afternoon Activities */}
          <div className="bg-green-50 p-4 rounded-lg shadow-sm">
            <h3 className="text-xl font-bold text-green-700 mb-3">{translations[currentLanguage].afternoonLabel}</h3>
            <ul className="list-none text-gray-800 space-y-1">
              {dayData.afternoon.map((activity, index) => (
                <li key={index}>
                  <ExpandableContent activity={activity} currentLanguage={currentLanguage} />
                </li>
              ))}
            </ul>
          </div>

          {/* Evening Activities */}
          <div className="bg-purple-50 p-4 rounded-lg shadow-sm">
            <h3 className="text-xl font-bold text-purple-700 mb-3">{translations[currentLanguage].eveningLabel}</h3>
            <ul className="list-none text-gray-800 space-y-1">
              {dayData.evening.map((activity, index) => (
                <li key={index}>
                  <ExpandableContent activity={activity} currentLanguage={currentLanguage} />
                </li>
              ))}
            </ul>
          </div>
        </div>

        {/* Notes / Bookings / Links */}
        {dayData.notes && (
          <div className="bg-yellow-50 p-4 rounded-lg shadow-sm mt-4">
            <h3 className="text-xl font-bold text-yellow-700 mb-3">{translations[currentLanguage].notesLabel}</h3>
            <pre className="text-gray-800 whitespace-pre-wrap font-sans text-base">
              {dayData.notes}
            </pre>
          </div>
        )}
        <SuggestionsModal
          isOpen={showSuggestionsModal}
          onClose={() => setShowSuggestionsModal(false)}
          suggestions={suggestions}
          isLoading={isLoadingSuggestions}
          error={errorSuggestions}
          currentLanguage={currentLanguage}
        />
      </div>
    );
  };

  return (
    <div className="min-h-screen bg-gradient-to-br from-blue-100 to-purple-100 p-4 sm:p-8 font-sans">
      {/* Tailwind CSS CDN */}
      <script src="https://cdn.tailwindcss.com"></script>
      {/* Font Inter */}
      <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700;800&display=swap" rel="stylesheet" />
      <style>
        {`
          body {
            font-family: 'Inter', sans-serif;
          }
        `}
      </style>

      {/* Header Section */}
      <header className="text-center mb-12">
        <h1 className="text-5xl font-extrabold text-blue-900 mb-4 leading-tight">
          {translations[language].headerTitle}
        </h1>
        <p className="text-xl text-gray-700 max-w-2xl mx-auto">
          {translations[language].headerSubtitle}
        </p>
        <p className="text-md text-gray-600 max-w-3xl mx-auto mt-4">
          {translations[language].headerDescription}
        </p>
      </header>

      {/* Language Toggle - Now Floating */}
      <div className="fixed top-4 right-4 z-50 bg-white p-3 rounded-full shadow-lg flex items-center space-x-2">
        <span className="text-lg font-semibold text-gray-700">English</span>
        <label htmlFor="language-toggle" className="relative inline-flex items-center cursor-pointer">
          <input
            type="checkbox"
            id="language-toggle"
            className="sr-only peer"
            checked={language === 'hi'}
            onChange={() => setLanguage(language === 'en' ? 'hi' : 'en')}
          />
          <div className="w-14 h-8 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-blue-300 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[4px] after:left-[4px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-6 after:w-6 after:transition-all peer-checked:bg-blue-600"></div>
        </label>
        <span className="text-lg font-semibold text-gray-700">हिन्दी</span>
      </div>

      {/* Removed dynamic loading indicator */}
      {/* Removed translationError display */}

      {/* Itinerary Days */}
      <main className="max-w-6xl mx-auto">
        {itineraryData.map((day) => (
          <ItineraryDay key={day.day} dayData={day} currentLanguage={language} />
        ))}
      </main>

      {/* Footer */}
      <footer className="text-center mt-12 text-gray-600 text-sm">
        <p>{translations[language].footerCopyright}</p>
        <p>{translations[language].footerCreatedBy}</p>
      </footer>
    </div>
  );
};

export default App;
